<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-show-img' %>
    </div>
    <div class="col-md-6">    
      <h1 class="text-center">Here's your profile</h1>
      <p class="text-center">Be a part of the Baritsu! community and fill out your profile!</p>
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %><br/></h1>
      <div class="well profile-block profile-description">
        <h3>Description</h3>
        <%= @user.profile.job_title %><br/>
      </div>
      <!-- if a pro user, let them see the full detials -->
      <% if current_user.plan_id == 2 %>
          <div class="well profile-block profile-contact-info">
            <h3>Contact Info</h3>
            <%= @user.profile.phone_number %><br/>
            <%= @user.profile.contact_email %><br/>
          </div>
      <% end %>
    </div>
  </div>
</div>
